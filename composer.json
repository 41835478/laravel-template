{
    "name": "purocean/laravel-template",
    "description": "The Laravel Project Template.",
    "keywords": ["framework", "laravel", "template"],
    "homepage": "https://github.com/purocean/laravel-template",
    "type": "project",
    "license": "MIT",
    "support": {
        "issues": "https://github.com/purocean/laravel-template/issues?state=open"
    },
    "require": {
        "php": ">=7.0.0",
        "dingo/api": "2.*.*@alpha",
        "intervention/image": "^2.3",
        "jenssegers/mongodb": "^3.3@alpha",
        "laravel/framework": "5.5.*",
        "laravel/tinker": "~1.0",
        "predis/predis": "^1.1",
        "purocean/php-wechat-sdk": "^0.3.0",
        "tymon/jwt-auth": "^1.0.0@beta",
        "zizaco/entrust": "^1.7"
    },
    "require-dev": {
        "fzaninotto/faker": "~1.4",
        "mockery/mockery": "0.9.*",
        "phpunit/phpunit": "~5.7"
    },
    "autoload": {
        "classmap": [
            "database"
        ],
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-root-package-install": [
            "php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "php artisan key:generate",
            "php artisan jwt:secret"
        ],
        "post-install-cmd": [
            "Illuminate\\Foundation\\ComposerScripts::postInstall",
            "php artisan optimize"
        ],
        "post-update-cmd": [
            "Illuminate\\Foundation\\ComposerScripts::postUpdate",
            "php artisan optimize"
        ],
        "make-api-doc": [
            "php artisan api:docs --output-file api.md"
        ]
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true
    }
}
